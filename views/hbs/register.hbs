<!DOCTYPE html>
<html lang="en" >
<head>
    <title>Sign Up</title>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css">
    <link rel="stylesheet" href="/login.css">
</head>
<body>
<div class="container right-panel-active">
    <!-- Sign Up -->
    <div class="container__form container--signup">
        <form action="/authentication/register" method="POST" class="form" id="form1">
            <h2 class="form__title">Sign Up</h2>
            <input type="userName" placeholder="User" class="input" id="userName" name="userName" maxlength="50" required/>
            <input type="email" placeholder="Email" class="input" id="email" name="email" maxlength="100" required />
            <input type="password" placeholder="Password" class="input" id="password" name="password" minlength="6" required />
            <input type="password" placeholder="Password Confirm" class="input" id="passwordconfirm" name="passwordconfirm" required />
            <button type="submit" class="btn btn-primary" style="margin-top:10px">Sign Up</button>
            <div>
                {{#if message_register}}
                    <h5 class="text-message">{{message_register}}</h5>
                {{/if}}
            </div>
        </form>
    </div>

    <!-- Sign In -->
    <div class="container__form container--signin">
        <form action="/authentication/login"  method="POST" class="form" id="form2">
            <h2 class="form__title">Sign In</h2>
            <input type="email" placeholder="Email" class="input" id="email" name="email" required />
            <input type="password" placeholder="Password" class="input" id="password" name="password" required />
            <button type="submit" class="btn btn-primary" style="margin-top:10px">Sign In</button>
            <div>
                {{#if message_login}}
                    <h5 class="text-message">{{message_login}}</h5>
                {{/if}}
            </div>
        </form>
    </div>

    <!-- Overlay -->
    <div class="container__overlay">
        <div class="overlay">
            <div class="overlay__panel overlay--left">
                <div class="text-panel">
                    <h1>Welcome Back!</h1>
                    <p>To keep connected with us please login with your personal info</p>
                </div>
                <button class="switch-button" id="signIn">Sign In</button>
            </div>
            <div class="overlay__panel overlay--right">
                <div class="text-panel">
                    <h1>Hello, Friend!</h1>
                    <p>Enter your personal details and start a journey with us</p>
                </div>
                <button class="switch-button" id="signUp">Sign Up</button>
            </div>
        </div>
    </div>
</div>

<!-- partial -->
<script  src="/login.js"></script>

</body>
</html>
