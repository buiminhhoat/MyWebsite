    <link rel="stylesheet" href="/css/bar.css" media="screen" type="text/css">
    <link rel="stylesheet" href="/css/bootstrap.css">

    <link rel="stylesheet" href="/css/w3.css">

    <style>
        body {
            font-size: 16px;
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen,
            Ubuntu, Cantarell, "Open Sans", "Helvetica Neue", sans-serif;
            align-items: center;
            /*background: url("/img/wallpaper.jpg");*/
            background-attachment: fixed;
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
            display: grid;
            place-items: center;
            margin-bottom: 50px;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-default navbar-fixed-top" >
        <div>
            <div class="row">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                    <a class="navbar-brand" href="/homepage">Blog Website</a>
                </div>
                <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse">
                    <ul class="nav navbar-nav main-nav navbar-right ">
                        <li><a class="navactive color_animation" href="/homepage">HOME</a></li>
                        <li><a class="color_animation" href="/blog/write">WRITE</a></li>
                        <li><a class="color_animation" href="/admin/manageuser">MANAGE USER</a></li>
                        <li><a class="color_animation" href="/logout">LOG OUT</a></li>
                        <li><a></a></li>
                    </ul>
                </div>
            </div>
        </div>
    </nav>

    <div class="container mt-4" style="margin-top: 50px">
        <div class="w3-white" style="margin-bottom: 30px">
            <div class="w3-container">
                <div class="w3-center w3-padding-32">
                    <h2 class="w3-wide" style="font-weight: bold; font-size: 45px;">MANAGE USER</h2>
                </div>
            </div>
        </div>

        <h2>
            Lock user
        </h2>

        <div class="card-body" style="margin-bottom: 50px">
            <form action="/admin/lock" method="POST" style="margin-left: 20px">
                <div style="margin-bottom: 10px">
                    <label for="email"  style="font-size: 17px">Email</label>
                    <input type="email" class="form-control" id="email" name="email"  style="font-size: 15px">
                </div>

                <button type="submit" class="btn btn-primary" style="font-size: 16px">Lock</button>
            </form>
        </div>

        <h2>
            UnLock user
        </h2>

        <div class="card-body" style="margin-bottom: 50px">
            <form action="/admin/unlock" method="POST" style="margin-left: 20px">
                <div style="margin-bottom: 10px">
                    <label for="email" style="font-size: 17px">Email</label>
                    <input type="email" class="form-control" id="email" name="email" style="font-size: 15px">
                </div>

                <button type="submit" class="btn btn-primary" style="font-size: 16px">UnLock</button>
            </form>
        </div>

        {{#if message}}
            <h4 class="alert alert-danger mt-4">{{message}}</h4>
        {{/if}}
    </div>
</body>
</html>