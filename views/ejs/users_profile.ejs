<!DOCTYPE html>
<html lang="en">
<head>
    <title>Profile: <%= userName %></title>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
<!--    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">-->
    <script src="https://kit.fontawesome.com/30c3646248.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/css/style.css">

    <link href='http://fonts.googleapis.com/css?family=Pacifico' rel='stylesheet'>
    <link rel="stylesheet" href="/css/bar.css" media="screen" type="text/css">
    <link rel="stylesheet" href="/css/bootstrap.css">
    <link rel="stylesheet" href="/css/bootstrap5.css">
    <link rel="stylesheet" href="/css/w3.css">

    <style>
        body {
            font-size: 16px;
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen,
            Ubuntu, Cantarell, "Open Sans", "Helvetica Neue", sans-serif;
            align-items: center;
            background-attachment: fixed;
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
            display: grid;
            place-items: center;
            margin-bottom: 50px;
        }
    </style>

</head>
<body>
<script>
    function confirmDelete(url, userId) {
        if (confirm("Bạn có chắc chắn muốn xóa blog này không?"))
        {
            window.location.href = url + `?type=${userId}`;
        }
    }
</script>

<nav class="navbar navbar-default navbar-fixed-top" >
    <div>
        <div class="row">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <a class="navbar-brand" href="/homepage">Blog Website</a>
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav main-nav navbar-right ">
                    <%- nav_bar %>
                    <%- userSection %>
                </ul>
            </div>
        </div>
    </div>
</nav>

<div class="container" style="margin-top: 50px">
    <div class="w3-white" style="margin-bottom: 30px">
        <div class="w3-container">
            <div class="w3-center w3-padding-32">
                <h2 class="w3-wide" style="font-weight: bold; font-size: 45px;">USER PROFILE</h2>
<!--                <p class="w3-opacity"><i>Writing and publishing</i></p>-->
            </div>
        </div>
    </div>

    <%- userDataSection %>

    <form action="/users/<%= userId %>/search" method="get">
        <div class="row" style="margin-top: 50px; margin-bottom: 50px">
            <h2 class="search-bar-left">All posts by <%= userName %></h2>

            <select class="column search-bar-mid" name="categoryId" id="categoryId" style="margin-left: 15px">
                <option value="0" selected hidden>Category</option>
                <option value="1">Food</option>
                <option value="2">Travel</option>
                <option value="3">Health and Fitness</option>
                <option value="4">Lifestyle</option>
                <option value="5">Fashion and Beauty</option>
                <option value="6">Personal</option>
                <option value="7">Sports</option>
                <option value="8">Business</option>
                <option value="9">News</option>
                <option value="10">Book and Writing</option>
                <option value="11">Others</option>
            </select>
            <input class="search-bar-right" type="text" name="searchString" placeholder="Search..">
            <button class="search-bar-button" type="submit">
                <i class="fa fa-search"> </i>
            </button>
        </div>
    </form>

    <%-listOfBlogs%>
</div>
</body>
</html>
